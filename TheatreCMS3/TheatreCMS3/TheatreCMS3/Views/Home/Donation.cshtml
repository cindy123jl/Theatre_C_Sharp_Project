
@{
    ViewBag.Title = "Consider Making A Donation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="donation-h1"><br />Consider Making a Donation<br /></h1>

<div>
    <div class="row donation-row">
        
        
        <label for="FirstName">First Name*</label>
        <input type="text" class="form-control" placeholder="First name">
       
        <label for="LastName">Last Name*</label>
        <input type="text" class="form-control" placeholder="Last name">
       
       
        <label for="EmailAddress">Email Address*</label>
        <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" placeholder="Email Address">
        
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" placeholder="Address">

        <label for="DonationAmount">Donation Amount($)*</label>
        <input type="text" class="form-control" id="DonationAmount" name="DonationAmount" placeholder="Donation Amount">

        <label for="DonationComments">Donation Comments</label>
        <textarea class="form-control" placeholder="Place comment here..." id="DonationComments" style="height: 100px"></textarea>



        <input class="donation-input" type="submit" value="Submit">
    </div>
 
</div>
