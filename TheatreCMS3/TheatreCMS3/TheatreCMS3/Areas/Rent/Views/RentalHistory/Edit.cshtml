@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
  ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  <h2 style="text-align:center"> Edit Rental History</h2>
  <div class=" rounded form-horizontal p-2" style="background: #f04d44; max-width: 600px; margin: auto">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="row justify-content-center">
      <div class="col-6 ">
        <div class="form-group">
          <h2 class="control-label">Rental</h2>
          @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
          </div>
        </div>

      <div class="col-6">
        <div class="form-group">
          <h2 class="control-label">Damaged?</h2>
            <div class="checkbox" onchange="checkLink()">
              @Html.EditorFor(model => model.RentalDamaged)
              @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger"})
            </div>
          </div>
        </div>
      </div>
    <div class="row">
      <div class="col-12">
        <div class="form-group">
          <h2 class="control-label" id="Switch">Notes</h2>
            @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-6 text-right">
        <button onclick="~/rent/rentalhistory" class="btn btn-secondary">
          Back to List
        </button>
      </div>
        <div class="col-6">
          <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
  </div>

}

<script>
  var Counter = 0;
  function checkLink() {
    
    Counter += 1;
    console.log(Counter);
    if (Counter % 2 == 0) {
      document.getElementById("Switch").innerHTML = "Notes"
    }
    else {
      document.getElementById("Switch").innerHTML = "Damages"
    }
  }
  function check() {
    var chk = document.getElementById("RentalDamaged");
    if (chk.checked) {
      checkLink()
    }                                 
  }
  check();
  
</script>
                                